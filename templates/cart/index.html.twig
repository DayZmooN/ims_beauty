                                {% endfor %} #} 
                               {% if googleCalendarSlots is not empty %}
                                <div class="available-slots">
                                    <h3>Créneaux Disponibles (Google Agenda)</h3>
                                    {% for slot in googleCalendarSlots %}
                                        <div>
                                            <input type="radio" id="google_slot_{{ item.service.id }}_{{ loop.index }}" 
                                                   name="selectedTimeSlot[{{ item.service.id }}]" 
                                                   value="{{ slot }}" required>
                                            <label for="google_slot_{{ item.service.id }}_{{ loop.index }}">{{ slot }}</label>
                                        </div>
                                      
                                    {% endfor %}
                                      <a href="{{ path('cart_remove', {'id': item.service.id}) }}" class="btn btn-danger">Retirer</a>
                                </div>
                            {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
  

            <button type="submit">Confirmer les Rendez-vous</button>
            
        </form>
    {% else %}
        <p>Votre panier est vide.</p>
        {% for flashMessage in app.flashes('success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}

{% for flashMessage in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ flashMessage }}
    </div>
{% endfor %}

    {% endif %}
</section>

{% endblock %}
