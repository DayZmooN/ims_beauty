{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" class="form-login">
    {# {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %} #}

    <h1>Connectez-vous</h1>
    <div class="form-connexion">
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Votre adresse email*" required autofocus>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Votre mot de passe*" required>

        <div class="remember-check">
            <input type="checkbox">
            <label for="">Se souvenir de moi?</label>
        </div>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >
        {% if error %}
        <p class="alert alert-danger error-login">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
        {% endif %}
        <div class="button-links">
            <button type="submit">
                Me Connecter
            </button>
            <div class="login-troubleshooting">
                <a href="#">Mot de passe oubli√©?</a>
                <a href="{{path('app_register')}}">Pas encore inscrits? Inscrivez-vous !</a>
            </div>
        </div>
        
    </div>
</form>
{% endblock %}
