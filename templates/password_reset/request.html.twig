{% extends 'base.html.twig' %}

{% block title %}Demande de Réinitialisation du Mot de Passe
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Demande de Réinitialisation du Mot de Passe</h1>
		<p>Veuillez entrer votre adresse e-mail pour recevoir un lien de réinitialisation de mot de passe.</p>

		{{ form_start(requestForm) }}
		{{ form_row(requestForm.email) }}
		<button type="submit" class="btn btn-primary">Envoyer le lien de réinitialisation</button>
		{{ form_end(requestForm) }}
	</div>
{% endblock %}
